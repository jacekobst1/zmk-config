/ {
    combos {
        compatible = "zmk,combos";

        Esc {
            bindings = <&kp ESC>;
            key-positions = <22 23>;
        };

        Del {
            bindings = <&kp DEL>;
            key-positions = <26 27>;
        };

        LeftMouse {
            bindings = <&tog 3>;
            key-positions = <21 22>;
            layers = <0 3>;
        };

        RightMouse {
            bindings = <&tog 6>;
            key-positions = <27 28>;
            layers = <0 6>;
        };

        Layer5 {
            bindings = <&mo 5>;
            key-positions = <33 30>;
            layers = <0 3 5 6>;
        };
    };
};